{
  "name": "container",
  "label": "Conteneur",
  "category": "core",
  "icon": "üì¶",
  "description": "Conteneur flexible pour organiser le contenu",

  "configurableProperties": {
    "content": {
      "content": {
        "type": "html",
        "label": "Contenu",
        "default": "<p style=\"margin: 0; padding: 0; font-family: Arial, sans-serif; font-size: 14px; color: #666666;\">Glissez du contenu ici</p>",
        "required": false,
        "placeholder": "HTML ou contenu enfant",
        "tab": "Contenu",
        "help": "Le contenu de ce conteneur (composants enfants ou HTML)"
      }
    },

    "style": {
      "backgroundColor": {
        "type": "color",
        "label": "Couleur de fond",
        "default": "{{designSystem.tokens.colors.backgroundSecondary}}",
        "allowCustom": true,
        "palette": "{{designSystem.tokens.colors}}",
        "tab": "Style"
      },
      "borderWidth": {
        "type": "slider",
        "label": "√âpaisseur bordure",
        "default": "0",
        "min": 0,
        "max": 10,
        "unit": "px",
        "tab": "Style"
      },
      "borderColor": {
        "type": "color",
        "label": "Couleur bordure",
        "default": "#dddddd",
        "allowCustom": true,
        "tab": "Style",
        "conditional": {
          "field": "borderWidth",
          "operator": ">",
          "value": 0
        }
      },
      "borderStyle": {
        "type": "select",
        "label": "Style bordure",
        "default": "solid",
        "options": [
          { "value": "solid", "label": "Solide" },
          { "value": "dashed", "label": "Tirets" },
          { "value": "dotted", "label": "Pointill√©s" }
        ],
        "tab": "Style",
        "conditional": {
          "field": "borderWidth",
          "operator": ">",
          "value": 0
        }
      },
      "borderRadius": {
        "type": "slider",
        "label": "Arrondi des coins",
        "default": "{{designSystem.tokens.borderRadius.none}}",
        "min": 0,
        "max": 32,
        "unit": "px",
        "tab": "Style"
      }
    },

    "layout": {
      "maxWidth": {
        "type": "text",
        "label": "Largeur maximale",
        "default": "600px",
        "placeholder": "600px, 100%, auto",
        "tab": "Disposition",
        "help": "Largeur max du conteneur (ex: 600px, 100%)"
      },
      "align": {
        "type": "button-group",
        "label": "Alignement",
        "default": "center",
        "options": [
          { "value": "left", "icon": "align-left", "label": "Gauche" },
          { "value": "center", "icon": "align-center", "label": "Centre" },
          { "value": "right", "icon": "align-right", "label": "Droite" }
        ],
        "tab": "Disposition"
      },
      "padding": {
        "type": "slider",
        "label": "Espacement interne",
        "default": "{{designSystem.tokens.spacing.md}}",
        "min": 0,
        "max": 64,
        "unit": "px",
        "tab": "Disposition",
        "help": "Padding uniforme (peut √™tre personnalis√© individuellement)"
      },
      "paddingTop": {
        "type": "slider",
        "label": "Padding haut",
        "default": null,
        "min": 0,
        "max": 64,
        "unit": "px",
        "nullable": true,
        "nullLabel": "Auto (selon padding g√©n√©ral)",
        "tab": "Disposition"
      },
      "paddingRight": {
        "type": "slider",
        "label": "Padding droit",
        "default": null,
        "min": 0,
        "max": 64,
        "unit": "px",
        "nullable": true,
        "nullLabel": "Auto (selon padding g√©n√©ral)",
        "tab": "Disposition"
      },
      "paddingBottom": {
        "type": "slider",
        "label": "Padding bas",
        "default": null,
        "min": 0,
        "max": 64,
        "unit": "px",
        "nullable": true,
        "nullLabel": "Auto (selon padding g√©n√©ral)",
        "tab": "Disposition"
      },
      "paddingLeft": {
        "type": "slider",
        "label": "Padding gauche",
        "default": null,
        "min": 0,
        "max": 64,
        "unit": "px",
        "nullable": true,
        "nullLabel": "Auto (selon padding g√©n√©ral)",
        "tab": "Disposition"
      }
    }
  },

  "validation": {
    "rules": [
      {
        "field": "maxWidth",
        "validator": "cssUnit",
        "params": {
          "allowedUnits": ["px", "%", "auto"]
        },
        "message": "La largeur doit √™tre en px, % ou auto"
      }
    ]
  }
}
